{
  "name": "env-from-shell",
  "main": "./lib/main",
  "version": "0.2.0",
  "description": "Make Atom use the $PATH set up by the user's shell",
  "keywords": [
    "shell",
    "path",
    "env"
  ],
  "activationCommands": {
    "atom-workspace": [
      "env-from-shell:copy",
      "env-from-shell:reset"
    ]
  },
  "repository": "https://github.com/aki77/atom-env-from-shell",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "consistent-env": "^1.1.2"
  },
  "configSchema": {
    "variables": {
      "order": 1,
      "description": "List of environment variables which are copied from the shell.",
      "type": "array",
      "default": [
        "PATH"
      ],
      "items": {
        "type": "string"
      }
    },
    "autoRun": {
      "order": 2,
      "description": "auto-run package is required.",
      "type": "boolean",
      "default": false
    },
    "debug": {
      "order": 99,
      "type": "boolean",
      "default": false
    }
  }
}
